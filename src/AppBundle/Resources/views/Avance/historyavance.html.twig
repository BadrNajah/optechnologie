{% extends "::base.html.twig" %}

{% block title %}AppBundle:Client:Directory{% endblock %}

{% block body %}

	<div id="fullpage">
		<div class="section">
                  <div class="op_single_client_page">
                        <div class="container-fluid left_navbar">
                              <div class="row left_navbar">
                                    <div class="col-md-2 left_navbar bk_navbar">
                                          {{ include('AppBundle::Client/menu.html.twig') }}
                                    </div>
                                    <div class="col-md-10"> 
                                          <div class="op_directory_info">
                                                <h3>Historique Avance Client Badr Janah</h3>
                                                <table class="table table-bordered">
                                                      <thead>
                                                            <tr>
                                                                  <th>Date</th>
                                                                  <th>Avance</th>
                                                                  <th colspan = "2">Action</th>
                                                            </tr>
                                                      </thead>
                                                      <tbody>
                                                            {% for av in avance %}
                                                                  <tr>
                                                                        <td>{{ av.date_avance|date("d/m/Y") }}</td>
                                                                        <td>{{ av.avance }}</td>
                                                                        <td><a href="#" class = "btn btn_edit_color"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a></td>
                                                                        <td><a href="#" class = "btn"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a></td>
                                                                  </tr> 
                                                            {% endfor %}                   
                                                      </tbody>
                                                </table>
                                                
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
		</div>
      </div>

{% endblock %}