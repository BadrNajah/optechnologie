{% extends "::base.html.twig" %}

{% block title %}AppBundle:Client:create{% endblock %}

{% block body %}

	<div id="fullpage">
		<div class="section">
            <div class="vend_page">
                <div class="container-fluid left_navbar">
                    <div class="row left_navbar">

                        <div class="col-md-2 left_navbar bk_navbar">
                        
                            {{ include('AppBundle::Client/menu.html.twig') }}

                        </div>
                        <div class="col-md-10">
                        
                            <div class="op_add_client">
                                <div class="row">
                                    <div class="col-md-3">
                                        <a href="{{url('addclient')}}" class = "btn btn-success btn_color">Ajouter Client</a>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" placeholder = "Search" id="search_client">
                                    </div>
                                    <div class="col-md-5">
                                        <div class="op_deconnect">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% for label, messages in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ messages }}
                                </div>
                            {% endfor %}

                            <div class="op_client_info">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Nom & Pr√©nom</th>
                                            <th>Tel</th>
                                            <th colspan="3">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id = "table_clients">
                                        {% for client in clients %}
                                            <tr>
                                                <td>{{ client.date }}</td>
                                                <td>{{ client.nom }} {{ client.prenom }}</td>
                                                <td>{{ client.tel }}</td>
                                                <td style = "width:100px;"><a href="{{url('directoryclient',{id:client.id})}}" class = "btn btn_display_color">Afficher<i class="fa fa-folder-open-o"></i></a></td>
                                                <td style = "width:100px;"><a href="{{url('editclient',{id:client.id})}}" class = "btn btn_edit_color">Modifier<i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                                <td style = "width:100px;"><a href="{{url('deleteclient',{id:client.id})}}" class = "btn btn_edit_delete">Supprimer <i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
		</div>
    </div>
    
{% endblock %}
